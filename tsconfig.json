{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["vscode","node"]
    },
    "include": [
        "src/",
        "cli/"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
  