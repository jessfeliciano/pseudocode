{
  "name": "pseudocode",
  "displayName": "Pseudocode Language Support",
  "description": "Provides syntax highlighting, TODO detection, and CLI validation for a custom pseudocode language.",
  "publisher": "Jessica Feliciano",
  "license": "CC-BY-NC-4.0",
  "author": {
    "name": "Jessica Feliciano",
    "url": "https://github.com/jessfeliciano"
  },
  "icon": "media/logo-small-white.png",
  "repository": "pseudocode",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "pseudocode",
        "aliases": [
          "Pseudocode",
          "pseudocode",
          "pseudo",
          "Pseudo"
        ],
        "extensions": [
          ".psc"
        ],
        "configuration": "./language-configuration.json"
    }],
    "grammars": [{
        "language": "pseudocode",
        "scopeName": "source.pseudocode",
        "path": "./syntaxes/pseudocode.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "check": "node ./dist/cli/index.js"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/vscode": "^1.99.1"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "ts": "^0.2.2"
  }
}
